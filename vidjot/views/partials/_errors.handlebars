{{!-- Passport makes an error array, not errors --}}
{{#if errors }}
    <div class="alert alert-danger">
        {{error}}
    </div>
{{/if}}


{{!-- Loop through errors --}}

{{#each errors }}
    <div class="alert alert-danger">
        {{text}}
    </div>
{{!-- If no errors --}}
{{else}}

{{/each}}
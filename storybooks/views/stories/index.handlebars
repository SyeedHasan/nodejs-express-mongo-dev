<h1>Stories</h1>
<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{#if user}}
                {{!-- access global user and local user --}}
                    {{{editIcon user.id ../user.id}}}
                {{/if}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                {{!-- Arguments are given with a space only! More than once? brackets! --}}
                <p class="story-text">{{stripTags (truncate body 150)}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}">
                    <a href="/stories/user/{{user.id}}"></a>{{user.firstName}} {{user.lastName}} </a>
                </div>
            </div>
            <div class="card-action center-align">
                <a class="btn grey" href="/stories/show/{{id}}">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No stories found</p>
    {{/each}}
</div>